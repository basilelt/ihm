<?xml version="1.0" encoding="UTF-8"?>
<!-- imports de classes JavaFX -->
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<!-- les balises correspondent aux classes JavaFX -->
<!-- fx est un espace de nommage pour des composants de JavaFX -->
<!-- fx:controller indique la classe du contrôleur associé -->
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
    fx:controller="ensisa.cmexemple.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label fx:id="welcomeText" />
    <Button text="Hello!" onAction="#onHelloButtonClick" />
</VBox>